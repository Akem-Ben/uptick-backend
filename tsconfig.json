{
  "compilerOptions": {
    "target": "es2022",    
    "module": "commonjs",                
    "rootDir": "./src",   
    "baseUrl": "./src",                                  
    "paths": {
      "types/*": ["types/*"]
    }, 
    "typeRoots": ["./src/types/**"], 
    "outDir": "./build",  
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,        
    "strict": true,    
    "skipLibCheck": true  
  },
  "typedocOptions": {
    "entryPoints": ["src/**/*"],
    "out": "docs"
  },
  "include": ["src/**/*", "__tests__"],
  "exclude": ["node_modules", "__tests__"]
}
